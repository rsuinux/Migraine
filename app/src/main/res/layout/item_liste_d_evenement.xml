<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/item_event_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="item nom"
            android:textStyle="bold"
            android:layout_alignParentTop="true" android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text=" [ "
            android:id="@+id/editText"
            android:textSize="14sp"
            android:layout_alignParentTop="true" android:layout_toStartOf="@+id/item_event_date"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/item_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="item date"
            android:textStyle="bold"
            android:layout_alignParentTop="true" android:layout_toStartOf="@+id/editText2"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text=" - "
            android:id="@+id/editText2" android:textSize="14sp"
            android:layout_alignParentTop="true" android:layout_toStartOf="@+id/item_event_heure"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/item_event_heure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="item heure"
            android:textStyle="bold"
            android:layout_alignParentTop="true" android:layout_toStartOf="@+id/editText3"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text=" ] "
            android:id="@+id/editText3" android:textSize="14sp"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_marginEnd="54dp" android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/text_item_medicament_pris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_event_date"
            android:layout_weight="50"
            android:paddingLeft="2dp"
            android:paddingRight="4dp"
            android:text="Nombre de mÃ©dicaments pris: "
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/item__event_nombre_medicament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_event_date"
            android:layout_toRightOf="@id/text_item_medicament_pris"
            android:layout_weight="50"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="item nbr medic"
            android:textStyle="bold" android:textColor="@color/colorPrimaryDark"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_event_reprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/configuration"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/relativeLayout"/>
</RelativeLayout>


